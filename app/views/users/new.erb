<ul class="errors">
<% if @errors %>
  <% @errors.each do |error| %>
    <li><%= error %></li>
  <% end %>
<% end %>
</ul>
<h2 class="register-header"> Register! </h2>
<form action="/users" method="post" class="register">
  <input type="text" name="user[username]" placeholder="
Username" /><br>
  <input type="email" name="user[email]" placeholder="Email" /><br>
  <input type="password" name="user[password]" placeholder="Password" /><br>
  <button type="submit" value="Sign Up!" class="button">Sign Up!</>
</form>
